<% include ./partials/_header %>

<div class="container">

    <div class="row">
      <!--FORM-->
      <div class="col-md-5">
        <div class="card">
          <div class="card-body">
            <form action="./entrenador/add" method="post">
              <div class="form-group">
                <input class="form-control" type="text" name="NoEntrenador" placeholder="Numero de Entrenador">
              </div>
              <div class="form-group">
                <input class="form-control" type="text" name="Nombre" placeholder="Nombre">
              </div>
              <div class="form-group">
                <input class="form-control" type="text" name="Descripcion" placeholder="Descripcion">
              </div>
              <div class="form-group">
                <input class="form-control" type="text" name="Region" placeholder="Region">
              </div>
              <div class="form-group">
                <input class="form-control" type="text" name="Edad" placeholder="Edad">
              </div>
              <div class="form-group">
              </div>
              <button class="btn btn-primary btn-block" type="submit">
                Guardar
              </button>
            </form>
          </div>
        </div>
      </div>
  
      <!-- LIST -->
      <div class="col-md-7">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>Numeor de entrenador</th>
              <th>Nombre</th>
              <th>Descripcion</th>
              <th>Region</th>
              <th>Edad</th>
              <th>Opciones</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0; i < Entrenador.length; i++) { %>
              <tr>
                <td><%= i + 1%></td>
                <td><strong><%= Entrenador[i].NoEntrenador %></strong></td>
                <td><%= Entrenador[i].Nombre %></td>
                <td><%= Entrenador[i].Descripcion %></td>
                <td><%= Entrenador[i].Region %></td>
                <td><%= Entrenador[i].Edad %></td>
                <td>
                  
                     
                  <a href="./entrenador/delete/<%= Entrenador[i]._id %>"
                    class="btn btn-danger">
                    Eliminar
                  </a>
                  <a href="./entrenador/editE/<%= Entrenador[i]._id %>" class="btn btn-info">
                    Editar
                  </a>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

<% include ./partials/footer %>